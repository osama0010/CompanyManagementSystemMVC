@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Index";
}

<a asp-action="Create" class="btn btn-primary">Add New Role</a>

@if (Model.Count() > 0)
{
    <div class="m-2">
        <form class="row offset-2" asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="Role's name'" />
            </div>
            <div class="col-4">
                <input class="btn btn-info" type="submit" value="Search" />
            </div>
        </form>
    </div>

    <table class="table table-stripped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R => R.Id)</td>
                <td>@Html.DisplayNameFor(R => R.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>
                    <partial name="_ButtonsPartialView" model="@Role.Id">
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>There is No Roles</h1>
}